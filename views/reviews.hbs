<div class="row ml-3">
    <div class="col-6">
        <h3 class="display-3 text-primary font-weight-bold mt-5">My Bookstore</h3>
        <p class="lead">Review(s) for the book.</p>
        <hr>

        {{#each reviews}}
        <div class="row mt-3">
            <div class="col">
                <h2>{{this.book_title}}</h2>
                <h6 class="text-secondary font-italic">by {{this.book_author}}</h6>
                <h6 class="text-secondary">Reviewer: {{this.byline}}</h6>
                <h6 class="text-secondary">Date: {{this.publication_dt}}</h6>
                <h5 class="mt-4">{{this.summary}}</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-right">
                <a href="{{this.url}}" target="blank" class="text-link text-underline "><u>Full Review</u></a>
                <h6 class="small text-muted font-italic">{{../copyright}}</h6>
            </div>
        </div>
        {{/each}}

        <a href="/" class="btn btn-primary btn-sm mt-3" role="button"><i class="fas fa-home mx-1"></i>Home</a>

    </div>
</div>
