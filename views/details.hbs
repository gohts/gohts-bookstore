<div class="row ml-3">
    <div class="col">
        <h3 class="display-3 text-primary font-weight-bold mt-5">My Bookstore</h3>
        <p class="lead">Details of the book.</p>
        <hr>

        <div class="row mt-3">
            <div class="col-2">
                <img src="{{book.image_url}}" class="mb-3">
                <h6 class="">Pages: <span class="">{{book.pages}}</span></h6>
                <h6 class="">Rating: {{book.rating}} <span class="text-info font-italic">({{book.rating_count}})</span></h6>
                <h6 class="">Genres:<br>
                    <span class="small">{{#each genres}} {{#if @last}}{{this}}{{else}}{{this}}, {{/if}} {{/each}}</span>
                </h6>
            </div>
            <div class="col-6 ml-5">
                <h3>{{book.title}}</h3>
                <h5 class="text-secondary font-italic">by {{#each authors}} {{#if @last}}{{this}}{{else}}{{this}}, {{/if}} {{/each}}</h5>
                <p class="mt-3">{{book.description}}</p>
                <br>
                <a href="/reviews/{{book.title}}" class="text-link"><u>Find Review</u></a>
            </div>
        </div>

        <a href="/" class="btn btn-primary btn-sm mt-3" role="button"><i class="fas fa-home mx-1"></i>Home</a>

    </div>
</div>
