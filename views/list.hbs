<div class="row ml-3">
    <div class="col-6">
        <h3 class="display-3 text-primary font-weight-bold mt-5">My Bookstore</h3>
        <p class="lead">Total <span class="font-italic text-primary">{{totalCount}}</span> books start with letter <span class="font-italic text-primary">{{letter}}</span></p>
        <hr>

        <div class="list-group mt-3">
            {{#each recs}}
            <a href="/details/{{this.book_id}}" class="list-group-item list-group-item-action">
                {{this.title}}
            </a>
            {{/each}}
        </div>

        <nav class="mt-3">
            <ul class="pagination justify-content-between">
                <li class="page-item {{#if isFirstPage}}disabled{{else}}{{/if}}">
                    <a class="page-link" href="/list?q={{letter}}&offset={{prevOffset}}">Previous</a>
                </li>
                <li class="page-item {{#if isLastPage}}disabled{{else}}{{/if}}">
                    <a class="page-link" href="/list?q={{letter}}&offset={{nextOffset}}">Next</a>
                </li>
            </ul>
        </nav>

        <a href="/" class="btn btn-primary btn-sm mt-3" role="button"><i class="fas fa-home mx-1"></i>Home</a>

    </div>
</div>
